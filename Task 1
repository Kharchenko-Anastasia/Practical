#include <stdio.h>

int main() {
    int t1, t2, t3;
    int total_time;

    printf("Введіть 3 значення: ");

    // Зчитуємо значення t1, t2, t3 зі вхідного рядка
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислюємо загальний час в хвилинах
    total_time = 60 * (1 / (1.0/t1 + 1.0/t2 + 1.0/t3));

    // Виводимо результат у годинах і хвилинах
    printf("Час, необхідний для з'їдання пирога: %d годин %d хвилин\n", total_time / 60, total_time % 60);

    return 0;
}
